{% extends 'base.html.twig' %}

{% block title %}{{ someVariable }}{% endblock %}

{% block body %}
    <section class="section-main">
        <nav class="navigation">
            <div class="navigation-brand">
                <img src="/img/logo-w.png" alt="Logo icon">
            </div>

            <ul class="navigation-items">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="navigation-items__item"><a href="/info">{{ app.user.email }}</a></li>
                    <li class="navigation-items__item"><a href="/logout">Atsijungti</a></li>
                {% endif %}
                {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="navigation-items__item"><a href="/register">Registracija</a></li>
                    <li class="navigation-items__item"><a href="/login">Prisijungimas</a></li>
                {% endif %}
            </ul>
        </nav>

        <img src="/img/paint.png" alt="" class="main-img">

        <div class="info">
            <div class="info-main">
                Rask žmones keliaujančius tuo pačiu maršrutu kaip tu, susisiek ir važiuokit drauge !
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="info-button" href="/matches">
                    SURASK
                </a>
            {% endif %}
            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="info-button" href="/quick/search">
                    IŠBANDYK
                </a>
            {% endif %}

            <div class="info-cs">
                Jau greitai ...
            </div>
        </div>
    </section>
{% endblock %}
